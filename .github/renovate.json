{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base",
        "schedule:earlyMondays"
    ],
    "branchPrefix": "renovate-",
    "packageRules": [
        {
            "automerge": true,
            "groupName": "Patch & Minor Updates",
            "groupSlug": "all-minor-patch-updates",
            "matchPackagePatterns": [
                "*"
            ],
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "schedule": "* 6 1 * *",
            "stabilityDays": 5
        },
        {
            "groupName": "Major Updates",
            "groupSlug": "all-major-updates",
            "matchPackagePatterns": [
                "*"
            ],
            "matchUpdateTypes": [
                "major"
            ]
        },
        {
            "description": "Github Actions: bundle all updates together",
            "groupSlug": "all-github-action-updates",
            "labels": [
                "devDependencies",
                "Renovate",
                "GithubActions"
            ],
            "groupName": "Github Actions",
            "automerge": true,
            "schedule": [
                "after 6am and before 9am on Monday"
            ],
            "matchUpdateTypes": [
                "minor",
                "patch",
                "digest"
            ],
            "stabilityDays": 3,
            "matchManagers": [
                "github-actions"
            ]
        }
    ],
    "vulnerabilityAlerts": {
        "groupName": "Vulnerability Patches",
        "schedule": [
            "after 6am and before 7am every weekday"
        ],
        "dependencyDashboardApproval": false,
        "stabilityDays": 0,
        "rangeStrategy": "update-lockfile",
        "commitMessagePrefix": "[SECURITY]",
        "branchTopic": "{{{datasource}}}-{{{depName}}}-vulnerability",
        "prCreation": "immediate"
    },
    "ignoreDeps": [
        "anothrNick/github-tag-action"
    ]
}
