{
    "openapi": "3.0.0",
    "servers": [],
    "info": {
        "description": ":pdf: This is a PDF Server that allows the conversion of a HTML document into a PDF using the chromium engine and puppeteer",
        "version": "1.0.0",
        "title": "Swagger OPG PDF Generator",
        "termsOfService": "http://swagger.io/terms/",
        "contact": {
            "email": ""
        },
        "license": {
            "name": "MIT",
            "url": "https://opensource.org/licenses/MIT"
        }
    },
    "tags": [],
    "paths": {
        "/generate-pdf": {
            "post": {
                "tags": [
                    "pdf"
                ],
                "summary": "Generate PDF from HTML Document",
                "description": "Allows you to pass a HTML document as a string into the endpoint and return a application/pdf document",
                "operationId": "generate-pdf",
                "parameters": [
                    {
                        "name": "strip-anchor-tags",
                        "in": "header",
                        "description": "Strip all anchor tag hrefs from links on page.",
                        "required": false,
                        "schema": {
                            "type": "boolean",
                            "items": {
                                "$ref": "#/components/schemas/GeneratePDF/properties/boolean-false"
                            }
                        }
                    },
                    {
                        "name": "margin-top",
                        "in": "header",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "items": {
                                "$ref": "#/components/schemas/GeneratePDF/properties/pixels"
                            }
                        },
                        "description": "Set the top margin in pixels of the PDF"
                    },
                    {
                        "name": "margin-bottom",
                        "in": "header",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "items": {
                                "$ref": "#/components/schemas/GeneratePDF/properties/pixels"
                            }
                        },
                        "description": "Set the bottom margin in pixels of the PDF"
                    },
                    {
                        "name": "margin-left",
                        "in": "header",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "items": {
                                "$ref": "#/components/schemas/GeneratePDF/properties/pixels"
                            }
                        },
                        "description": "Set the left margin in pixels of the PDF"
                    },
                    {
                        "name": "margin-right",
                        "in": "header",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "items": {
                                "$ref": "#/components/schemas/GeneratePDF/properties/pixels"
                            }
                        },
                        "description": "Set the right margin in pixels of the PDF"
                    },
                    {
                        "name": "title",
                        "in": "query",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "items": {
                                "$ref": "#/components/schemas/GeneratePDF/properties/string"
                            }
                        },
                        "description": "The title of the document that should be added for accessibility purposes."
                    },
                    {
                        "name": "subject",
                        "in": "header",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "items": {
                                "$ref": "#/components/schemas/GeneratePDF/properties/string"
                            }
                        },
                        "description": "The subject that should be added for accessibility purposes that describes the intent of the document."
                    },
                    {
                        "name": "print-background",
                        "in": "header",
                        "required": false,
                        "schema": {
                            "type": "boolean",
                            "items": {
                                "$ref": "#/components/schemas/GeneratePDF/properties/boolean-false"
                            }
                        },
                        "description": "Whether the PDF renderer should include background images when rendering the PDF."
                    },
                    {
                        "name": "emulate-media-type",
                        "in": "header",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "items": {
                                "$ref": "#/components/schemas/GeneratePDF/properties/emulate-media"
                            }
                        },
                        "description": "Set whether the PDF renderer should use the print or screen CSS for styling"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "content": {
                            "application/pdf": {
                                "schema": {}
                            }
                        }
                    },
                    "500": {
                        "description": "There is a problem with the service.",
                        "content": {
                            "application/json": {
                                "schema": {}
                            }
                        }
                    }
                },
                "security": [],
                "deprecated": false,
                "requestBody": {
                    "required": true,
                    "content": {
                        "text/html": {
                            "schema": {}
                        }
                    },
                    "description": "HTML document to render to a PDF"
                }
            }
        }
    },
    "externalDocs": {
        "description": "See OPG PDF Service git repository",
        "url": "https://github.com/ministryofjustice/opg-pdf-service/main/README.md"
    },
    "components": {
        "schemas": {
            "GeneratePDF": {
                "type": "object",
                "properties": {
                    "boolean-false": {
                        "format": "{true|false}",
                        "description": "boolean with a default of false",
                        "type": "boolean",
                        "default": "false"
                    },
                    "pixels": {
                        "format": "^[0-9]+$",
                        "description": "Pixel value as an integer",
                        "type": "integer"
                    },
                    "string": {
                        "format": "",
                        "description": "String value",
                        "type": "string"
                    },
                    "emulate-media": {
                        "format": "{screen|print}",
                        "description": "Media value type. screen or print.",
                        "type": "string",
                        "default": "print"
                    }
                }
            }
        }
    },
    "security": []
}
